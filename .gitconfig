[user]
	name = Christian Prescott
	email = me@christianprescott.com
[alias]
	rh = reset --hard
	ca = commit --amend --no-edit
	s = status
	head = log -n 1
	gerrit = push origin HEAD:refs/for/master
	l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --branches
[core]
	excludesfile = ~/.gitignore_global
